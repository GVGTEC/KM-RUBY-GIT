<div class="page-header" style="border-bottom: 0;">
  <h1>Produtos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Código SAC</th>
            <th>Descrição</th>
            <th>Preço Venda</th>
            <th>Estoque Atual</th>
      </tr>
    </thead>

    <tbody>
 
        <tr>
              <%= @lista_produtos.each do |result| %>
                <tr>
                  <td><%= result[0] %></td>
                  <td><%= result[1] %></td>
                  <td><%= result[2] %></td>
                  <td><%= result[3] %></td>
                </tr>
              
              <% end %>            
        </tr>

     </tbody>

  </table>
</div>
